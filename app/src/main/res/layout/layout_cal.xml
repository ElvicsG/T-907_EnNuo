<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:layout_margin="@dimen/dp_5"
    android:orientation="vertical">



    <ImageView
        android:id="@+id/tv_vop_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_4"

        android:src="@drawable/bg_vop_plus_selector" />


    <ImageView
        android:id="@+id/tv_vop_min"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dp_4"

        android:layout_height="wrap_content"
        android:gravity="center"
        android:src="@drawable/bg_vop_min_selector" />


    <ImageView
        android:id="@+id/tv_vop_save"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dp_4"

        android:layout_height="wrap_content"
        android:gravity="center"
        android:src="@drawable/bg_save_selector" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_cal_close"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_gravity="right"
            android:src="@drawable/bg_dialog_close" />
    </LinearLayout>


</LinearLayout>